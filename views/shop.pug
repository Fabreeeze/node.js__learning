doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
    body 
        header.main-header
            nav.main-header__nav    
                ul.main-header__list-item
                    li.main-header__item
                        a.active(href="/") Shop
                    li.main-header__item
                        a(href="/admin/add-product") Add Products
        
        main
            if prods.length >0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="", alt="a book")
                            div.card__content
                                h2.product__price Some price $43434
                                p.product__description  Some description 
                            .card__actions 
                                button.btn Add to Cart
            else 
                h1 No Products Added in Cart Yet :C 